{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["dist/**", ".next/**", "build/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": [".pytest_cache/**", "coverage/**", "test-results/**"]
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "package.json",
    "turbo.json",
    "pnpm-lock.yaml",
    "apps/api/pyproject.toml",
    "apps/api/uv.lock"
  ]
}
