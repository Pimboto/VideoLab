# Application Configuration
APP_NAME=Video Processor API
APP_VERSION=2.0.0
DEBUG=False
API_PREFIX=/api/video-processor

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Storage Configuration
STORAGE_DIR=D:/Work/video

# File Size Limits (in bytes)
MAX_VIDEO_SIZE=524288000
MAX_AUDIO_SIZE=52428800
MAX_CSV_SIZE=5242880

# Processing Configuration
CHUNK_SIZE=8192
JOB_POLL_INTERVAL=2000

# ============================================================================
# Clerk Authentication
# ============================================================================
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here
CLERK_JWKS_URL=https://api.clerk.com/v1/jwks
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================================================
# Supabase Configuration (PostgreSQL Database Only)
# ============================================================================
# ⚠️  NOTE: Supabase Storage is NO LONGER USED (migrated to AWS S3)
# ⚠️  Supabase is only used for PostgreSQL database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================================================
# AWS Configuration (S3 + CloudFront) ⭐ NEW
# ============================================================================
# AWS Access Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# AWS S3 Configuration
AWS_REGION=us-east-2
AWS_S3_BUCKET=videoapp-storage-production

# AWS CloudFront Configuration
AWS_CLOUDFRONT_DOMAIN=d3ppku6zdpgtef.cloudfront.net

# CloudFront Key Pair ID (Optional - for signed URLs)
# Leave empty to use public CloudFront URLs
AWS_CLOUDFRONT_KEY_PAIR_ID=

# ============================================================================
# MIGRATION NOTES
# ============================================================================
# After configuring above:
# 1. Install: pip install boto3
# 2. Test: python -c "from utils.aws_s3_client import get_s3_client; get_s3_client()"
# 3. Dry run: python -m scripts.migrate_supabase_to_s3 --dry-run
# 4. Migrate: python -m scripts.migrate_supabase_to_s3 --yes
# ============================================================================
